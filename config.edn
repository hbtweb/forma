{:forma-version "1.0.0"
 :compiler-version "1.0.0"
 :kora-core-version "1.0.0"
 
 ;; Path Configuration
 :paths {
   :default "default/"
   :library "library/"
   :projects "projects/"
 }
 
 ;; Resource Resolution Order (highest to lowest priority)
 :resolution-order [:project :library :default]
 
 ;; Default Settings
 :defaults {
   :platform-stack [:html :css :htmx]
   :styling-system :shadcn-ui
   :hierarchy-levels [:global :components :sections :templates :pages]
  :environment :production
 }
 
 ;; Folder Structure Definitions
 :folders {
   :components "components/"
   :platforms "platforms/"
   :styles "styles/"
   :global "global/"
   :sections "sections/"
   :templates "templates/"
 }
 
 ;; Feature Flags
 :features {
   :library-enabled true
   :project-isolation true
   :pre-resolution true
   :platform-discovery true
 }
 
;; Output format defaults (platform â†’ output format keyword)
:output {
  :html :html-string
  :css :inline
  :htmx :attributes
}

;; Minification defaults (per platform/output format)
:minify {
  :enabled false
  :environment :production
  :html {
    :enabled true
    :remove-whitespace true
    :remove-comments true
  }
  :css {
    :enabled true
    :remove-whitespace true
    :remove-comments true
  }
}

;; Optimization defaults
:optimization {
  :pre-compilation false
}

;; Styling defaults
:styling {
  :dedupe-classes? true
  :blank-class->nil? true
  :apply-base-when-explicit true
  :record-duplicate-classes? true
}

 ;; Cache Settings
 :cache {
   :platform-configs true
   :hierarchy-data true
   :styling-systems true
   :pre-resolved-contexts true
 }
 
 ;; Platform Registry (Multi-Platform Framework)
 :platforms {
   :html {:status :production
          :maturity 100
          :compiler :complete
          :output :html-string
          :targets [:web :ssr]}
   :css {:status :production
         :maturity 100
         :compiler :complete
         :output :css-string
         :targets [:web]}
   :htmx {:status :production
          :maturity 100
          :compiler :complete
          :output :attributes
          :targets [:web :ssr]}
   :oxygen {:status :production
            :maturity 100
            :compiler :complete
            :output :json-tree
            :targets [:wordpress :cms]}
   :react {:status :experimental
           :maturity 40
           :compiler :in-progress
           :output :jsx-string
           :targets [:web :spa :ssr]}
   :flutter {:status :planned
             :maturity 0
             :compiler :not-started
             :output :dart-code
             :targets [:mobile :ios :android :web :desktop]}
   :swiftui {:status :planned
             :maturity 0
             :compiler :not-started
             :output :swift-code
             :targets [:mobile :ios :macos :watchos :tvos]}
   :threejs {:status :planned
             :maturity 0
             :compiler :not-started
             :output :javascript
             :targets [:web :3d :graphics]}
   :unity {:status :planned
           :maturity 0
           :compiler :not-started
           :output :csharp-code
           :targets [:game :3d :vr :ar]}
   :unreal {:status :planned
            :maturity 0
            :compiler :not-started
            :output :cpp-code
            :targets [:game :3d :vr :simulation]}
   :godot {:status :planned
           :maturity 0
           :compiler :not-started
           :output :gdscript
           :targets [:game :2d :3d :indie]}
 }

 ;; CLI Configuration (Framework Tooling)
 :cli {
   :commands [:init :build :dev :generate :platforms]
   :templates {
     :html-app "templates/html-app/"
     :react-app "templates/react-app/"
     :flutter-app "templates/flutter-app/"
   }
   :default-platform :html
   :watch-enabled true
 }

 ;; Examples and Project Templates
 :examples {
   :hello-world "examples/01-hello-world/"
   :counter "examples/02-counter/"
   :todo-app "examples/03-todo-app/"
   :dashboard "examples/04-dashboard/"
 }

 ;; System Variables
 :variables {
   :forma-version "1.0.0"
   :compiler-version "1.0.0"
   :kora-core-version "1.0.0"
 }}

